<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_prin4"
    tools:context=".MainActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_Ciencias"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="32dp"
        android:adjustViewBounds="true"
        android:background="@color/bg_ciencias"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:textAlignment="center"
        android:textDirection="locale"
        app:layout_constraintEnd_toStartOf="@+id/img_Lengua"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_monkey"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        app:strokeColor="@color/cardview_dark_background"
        app:strokeWidth="15dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_Mate"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="12dp"
        android:background="#F9E104"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/img_Sociales"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_number_blocks_svgrepo_com"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        app:strokeColor="@color/cardview_dark_background"
        app:strokeWidth="15dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="176dp"
        android:fontFamily="@font/mousememoirs"
        android:text="MATEMÁTICA"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/bg_prin3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_Sociales"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="12dp"
        android:background="@color/bg_sociales"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_Mate"
        app:srcCompat="@drawable/ic_map"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        app:strokeColor="@color/cardview_dark_background"
        app:strokeWidth="15dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="176dp"
        android:fontFamily="@font/mousememoirs"
        android:text="SOCIALES"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/bg_prin3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_Lengua"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="46dp"
        android:background="@color/bg_lenguaje"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_Ciencias"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_blocks_abc"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        app:strokeColor="@color/cardview_dark_background"
        app:strokeWidth="15dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/mousememoirs"
        android:text="CIENCIAS"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/bg_prin3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_Ciencias" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="84dp"
        android:fontFamily="@font/mousememoirs"
        android:text="LENGUAJE"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/bg_prin3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_Lengua" />

</androidx.constraintlayout.widget.ConstraintLayout>